---
import Section from "@/components/Section.astro";
import { skills } from "@cv";
---

<Section title="Skills">
  <ul class="grid grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-3">
    {
      skills.map((category) => (
        <li class="rounded-lg border-2 border-content/20 p-2 flex flex-col">
          <h3 class="text-base font-semibold text-gray-800 mb-1 flex-1">
            {category.category}
          </h3>
          <ul class="flex flex-wrap gap-2">
            {category.names.map((skill) => (
              <li class="bg-content/80 text-background p-1 rounded text-xs">
                {skill}
              </li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</Section>
